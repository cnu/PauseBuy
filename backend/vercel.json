{
  "version": 2,
  "framework": null,
  "installCommand": "npm ci --legacy-peer-deps",
  "buildCommand": "",
  "outputDirectory": ".",
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "POST, OPTIONS" },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, X-Client-Id"
        }
      ]
    }
  ]
}
